<section id="modulos" class="featured-services section light-background">
  <div class="container section-title" data-aos="fade-up">
    <h2>{{title}}</h2>
    <p>{{subtitle}}</p>
  </div>

  <div class="container" data-aos="fade-up" data-aos-delay="100">
    <div class="row gy-4">
      {{#each items}}
        <div class="col-lg-6" data-aos="fade-up" data-aos-delay="{{delay}}">
          <div class="service-card">
            <div class="service-icon">
              <i class="{{icon}}"></i>
            </div>
            <div class="service-content">
              <h3>{{title}}</h3>
              <p>{{description}}</p>
              <ul class="service-features">
                {{#each features}}
                  <li><i class="fas fa-check-circle"></i>{{this}}</li>
                {{/each}}
              </ul>
              <a href="{{cta.href}}" class="service-btn">
                {{cta.label}}
                <i class="fas fa-arrow-right"></i>
              </a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>
