{{#if pagination}}
  <div class="{{#if wrapperClass}}{{wrapperClass}}{{else}}mt-3{{/if}}">
    <div class="d-flex flex-column flex-sm-row justify-content-between align-items-sm-center gap-2">
      <div>
        <small class="text-muted">
          Página {{pagination.page}} de {{pagination.pages}} |
          Total: {{pagination.total}} {{#if itemsLabel}}{{itemsLabel}}{{else}}registros{{/if}}
        </small>
      </div>
      <nav aria-label="{{#if ariaLabel}}{{ariaLabel}}{{else}}Paginación{{/if}}">
        <ul class="pagination{{#if paginationClass}} {{paginationClass}}{{/if}} flex-wrap justify-content-center gap-2 mb-0">
          <li class="page-item {{#if (eq pagination.page 1)}}disabled{{/if}}">
            <a
              class="page-link d-flex align-items-center justify-content-center"
              href="?page={{#if (eq pagination.page 1)}}1{{else}}{{subtract pagination.page 1}}{{/if}}{{#if paginationQuery}}&{{paginationQuery}}{{/if}}"
              aria-label="Anterior"
            >
              <i class="bi bi-chevron-left"></i>
              <span class="d-none d-sm-inline ms-1">Anterior</span>
            </a>
          </li>

          {{#if paginationDisplay}}
            {{#each paginationDisplay}}
              {{#if (eq this.type 'page')}}
                <li class="page-item {{#if (eq this.number ../pagination.page)}}active{{/if}}">
                  <a
                    class="page-link"
                    href="?page={{this.number}}{{#if ../paginationQuery}}&{{../paginationQuery}}{{/if}}"
                  >
                    {{this.number}}
                  </a>
                </li>
              {{else}}
                <li class="page-item disabled" aria-hidden="true">
                  <span class="page-link">...</span>
                </li>
              {{/if}}
            {{/each}}
          {{/if}}

          <li class="page-item {{#if (eq pagination.page pagination.pages)}}disabled{{/if}}">
            <a
              class="page-link d-flex align-items-center justify-content-center"
              href="?page={{#if (eq pagination.page pagination.pages)}}{{pagination.pages}}{{else}}{{add pagination.page 1}}{{/if}}{{#if paginationQuery}}&{{paginationQuery}}{{/if}}"
              aria-label="Siguiente"
            >
              <span class="d-none d-sm-inline me-1">Siguiente</span>
              <i class="bi bi-chevron-right"></i>
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
{{/if}}
