<div class="row mb-4">
  <div class="col">
    <h1><i class="bi bi-calendar-check"></i> Turnos</h1>
    {{#if doctorName}}
      <p class="text-muted mb-1">Mostrando agenda del profesional: <strong>{{doctorName}}</strong></p>
    {{/if}}
    {{#if fechaActualDisplay}}
      <p class="text-muted">Fecha seleccionada: <strong>{{fechaActualDisplay}}</strong></p>
    {{/if}}
  </div>
  <div class="col-auto mt-5 me-5">
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#nuevoTurnoModal">
      <i class="bi bi-plus-circle"></i> Nuevo Turno
    </button>
  </div>
</div>

{{#if requiresDoctorSelection}}
  <div class="alert alert-info" role="alert">
    Seleccioná un médico desde el dashboard para filtrar la agenda antes de ingresar a este módulo.
  </div>
{{else}}
  <!-- Filtros -->
  <div class="row mb-3">
    <div class="col-md-4">
      <form action="/turnos" method="GET">
        {{#if doctorId}}
          <input type="hidden" name="doctorId" value="{{doctorId}}">
        {{/if}}
        <div class="input-group">
          <input type="date" class="form-control" name="fecha" value="{{fechaActual}}">
          {{#if fechaActual}}
          <a href="/turnos{{#if doctorId}}?doctorId={{doctorId}}{{/if}}" class="btn btn-outline-danger">
            <i class="bi bi-x-circle"></i> Limpiar
          </a>
          {{/if}}
        </div>
      </form>
    </div>
  </div>

  <!-- Tabla de turnos -->
  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Fecha</th>
              <th>Hora</th>
              <th>Paciente</th>
              <th>Obra Social</th>
              <th>Estado</th>
              <th>Diagnóstico</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
          {{#each turnos}}
            <tr{{#if this.rowClass}} class="{{this.rowClass}}"{{/if}}>
              <td>
                {{#if this.fechaFormateada}}
                {{this.fechaFormateada}}
                {{else}}
                {{this.fecha}}
                {{/if}}
              </td>
              <td>{{this.hora}}</td>
              <td>
                {{#if this.paciente}}
                {{#if this.paciente.apellido}}
                {{this.paciente.apellido}}, {{this.paciente.nombre}}
                {{else}}
                Sin asignar
                {{/if}}
                {{else}}
                Sin asignar
                {{/if}}
              </td>
              <td>
                {{#if this.paciente}}
                {{#if this.paciente.obraSocial}}
                {{this.paciente.obraSocial.nombre}}
                {{else}}
                -
                {{/if}}
                {{else}}
                -
                {{/if}}
              </td>
              <td>
                <span
                  class="badge bg-{{#if (eq this.estado 'confirmado')}}success{{else if (eq this.estado 'cancelado')}}danger{{else if (eq this.estado 'completado')}}info{{else}}warning{{/if}}">
                  <span class="text-dark">
                    {{#if this.estado}}{{this.estado}}{{else}}pendiente{{/if}}

                  </span>
                </span>
              </td>
              <td>{{#if this.diagnostico}}{{this.diagnostico}}{{else}}-{{/if}}</td>
              <td>
                <a href="/turnos/{{this._id}}{{#if ../doctorId}}?doctorId={{../doctorId}}{{/if}}" class="btn btn-sm btn-info">
                  <i class="bi bi-eye"></i>
                </a>
                <button class="btn btn-sm btn-danger">
                  <i class="bi bi-trash"></i>
                </button>
              </td>
            </tr>
            {{else}}
            <tr>
              <td colspan="7" class="text-center text-muted">No hay turnos registrados</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>

      {{> paginationControls
          pagination=pagination
          paginationDisplay=paginationDisplay
          paginationQuery=paginationQuery
          itemsLabel="turnos"
          ariaLabel="Paginación de turnos"
          paginationClass="pagination-sm"
      }}
    </div>
  </div>
{{/if}}

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const fechaInput = document.querySelector('form[action="/turnos"] input[name="fecha"]');

    if (!fechaInput) {
      return;
    }

    fechaInput.addEventListener('change', () => {
      const form = fechaInput.form;
      if (!form) {
        return;
      }

      if (typeof form.requestSubmit === 'function') {
        form.requestSubmit();
      } else {
        form.submit();
      }
    });
  });
</script>

