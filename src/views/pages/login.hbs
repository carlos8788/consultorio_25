<article class="surface-panel border rounded-4" data-aos="zoom-in">
  <header class="surface-panel__header stack-sm border rounded-top-4">
    <span class="icon-badge icon-badge--xl">
      <i class="bi bi-hospital-fill" aria-hidden="true"></i>
    </span>
    <div class="stack-xs">
      <h2 class="mb-0">Sistema de Gesti&oacute;n</h2>
      <p class="text-soft mb-0">Consultorio M&eacute;dico</p>
    </div>
  </header>

  <div class="surface-panel__body stack-lg ">
    {{#if error}}
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2" aria-hidden="true"></i>
        {{error}}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    {{/if}}

    <form action="/login" method="POST" class="stack-md ">
      <div class="stack-xs">
        <label for="username" class="form-label mb-1">
          <i class="bi bi-person-fill text-primary" aria-hidden="true"></i> Usuario
        </label>
        <input
          type="text"
          class="form-control form-control-lg"
          id="username"
          name="username"
          placeholder="Ingrese su usuario"
          required
          autofocus>
      </div>

      <div class="stack-xs">
        <label for="password" class="form-label mb-1">
          <i class="bi bi-lock-fill text-primary" aria-hidden="true"></i> Contrase&ntilde;a
        </label>
        <input
          type="password"
          class="form-control form-control-lg"
          id="password"
          name="password"
          placeholder="Ingrese su contrase&ntilde;a"
          required>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-primary btn-lg">
          <i class="bi bi-box-arrow-in-right me-2" aria-hidden="true"></i>
          Iniciar Sesi&oacute;n
        </button>
      </div>
    </form>

