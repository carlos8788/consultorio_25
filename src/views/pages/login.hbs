<div class="login-card" data-aos="zoom-in">
  <div class="login-header">
    <i class="bi bi-hospital-fill" style="font-size: 3rem;"></i>
    <h2 class="mt-3 mb-1">Sistema de Gestión</h2>
    <p class="mb-0">Consultorio Médico</p>
  </div>

  <div class="login-body">
    {{#if error}}
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        {{error}}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    {{/if}}

    <form action="/login" method="POST">
      <div class="mb-3">
        <label for="username" class="form-label">
          <i class="bi bi-person-fill text-primary"></i> Usuario
        </label>
        <input 
          type="text" 
          class="form-control form-control-lg" 
          id="username" 
          name="username" 
          placeholder="Ingrese su usuario"
          required 
          autofocus>
      </div>

      <div class="mb-4">
        <label for="password" class="form-label">
          <i class="bi bi-lock-fill text-primary"></i> Contraseña
        </label>
        <input 
          type="password" 
          class="form-control form-control-lg" 
          id="password" 
          name="password" 
          placeholder="Ingrese su contraseña"
          required>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-primary btn-lg">
          <i class="bi bi-box-arrow-in-right me-2"></i>
          Iniciar Sesión
        </button>
      </div>
    </form>

    <hr class="my-4">

    <div class="text-center">
      <h6 class="text-muted mb-3">
        <i class="bi bi-info-circle"></i> Usuarios disponibles:
      </h6>
      <div class="row g-2">
        <div class="col-6">
          <div class="card bg-light">
            <div class="card-body p-2">
              <small class="d-block"><strong>admin</strong></small>
              <small class="text-muted">123456</small>
            </div>
          </div>
        </div>
        <div class="col-6">
          <div class="card bg-light">
            <div class="card-body p-2">
              <small class="d-block"><strong>meli209</strong></small>
              <small class="text-muted">123456</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
