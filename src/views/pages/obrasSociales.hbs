<div class="row mb-4">
  <div class="col">
    <h1><i class="bi bi-shield-plus"></i> Obras Sociales</h1>
  </div>
  <div class="col-auto">
    <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#nuevaObraSocialModal">
      <i class="bi bi-plus-circle"></i> Nueva Obra Social
    </button>
  </div>
</div>

<!-- Buscador -->
<div class="row mb-3">
  <div class="col-md-6">
    <form action="/obras-sociales" method="GET">
      <div class="input-group">
        <input type="text" class="form-control" name="search" placeholder="Buscar por nombre..." value="{{search}}">
        <button class="btn btn-outline-secondary" type="submit">
          <i class="bi bi-search"></i> Buscar
        </button>
        {{#if search}}
          <a href="/obras-sociales" class="btn btn-outline-danger">
            <i class="bi bi-x-circle"></i> Limpiar
          </a>
        {{/if}}
      </div>
    </form>
  </div>
</div>

<!-- Tabla de obras sociales -->
<div class="card">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Dirección</th>
            <th>Padrón</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each obrasSociales}}
            <tr>
              <td>{{this.nombre}}</td>
              <td>{{#if this.telefono}}{{this.telefono}}{{else}}-{{/if}}</td>
              <td>{{#if this.direccion}}{{this.direccion}}{{else}}-{{/if}}</td>
              <td>
                <span class="badge bg-secondary">{{this.padron}}</span>
              </td>
              <td>
                <a href="/obras-sociales/{{this._id}}" class="btn btn-sm btn-info">
                  <i class="bi bi-eye"></i>
                </a>
                <button class="btn btn-sm btn-danger">
                  <i class="bi bi-trash"></i>
                </button>
              </td>
            </tr>
          {{else}}
            <tr>
              <td colspan="5" class="text-center text-muted">No hay obras sociales registradas</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    {{> paginationControls
        pagination=pagination
        paginationDisplay=paginationDisplay
        paginationQuery=paginationQuery
        itemsLabel="obras sociales"
        ariaLabel="Paginación de obras sociales"
    }}
  </div>
</div>
