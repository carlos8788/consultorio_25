<div class="row mb-4">
  <div class="col">
    <h1><i class="bi bi-people"></i> Pacientes</h1>
  </div>
  <div class="col-auto">
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#nuevoPacienteModal">
      <i class="bi bi-plus-circle"></i> Nuevo Paciente
    </button>
  </div>
</div>

<!-- Buscador -->
<div class="row mb-3">
  <div class="col-md-6">
    <form action="/pacientes" method="GET">
      <div class="input-group">
        <input type="text" class="form-control" name="search" placeholder="Buscar por nombre, apellido o DNI..." value="{{search}}">
        <button class="btn btn-outline-secondary" type="submit">
          <i class="bi bi-search"></i> Buscar
        </button>
        {{#if search}}
          <a href="/pacientes" class="btn btn-outline-danger">
            <i class="bi bi-x-circle"></i> Limpiar
          </a>
        {{/if}}
      </div>
    </form>
  </div>
</div>

<!-- Tabla de pacientes -->
<div class="card">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>DNI</th>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Obra Social</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each pacientes}}
            <tr>
              <td>{{this.dni}}</td>
              <td>{{this.apellido}}</td>
              <td>{{this.nombre}}</td>
              <td>{{this.telefono}}</td>
              <td>{{#if this.obraSocial}}{{this.obraSocial.nombre}}{{else}}-{{/if}}</td>
              <td>
                <a href="/pacientes/{{this._id}}" class="btn btn-sm btn-info">
                  <i class="bi bi-eye"></i>
                </a>
                <button class="btn btn-sm btn-danger">
                  <i class="bi bi-trash"></i>
                </button>
              </td>
            </tr>
          {{else}}
            <tr>
              <td colspan="6" class="text-center text-muted">No hay pacientes registrados</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    {{> paginationControls
        pagination=pagination
        paginationDisplay=paginationDisplay
        paginationQuery=paginationQuery
        itemsLabel="pacientes"
        ariaLabel="Paginación de pacientes"
    }}
  </div>
</div>
